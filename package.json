{
  "name": "@hyperse/gh-pages-starter",
  "version": "1.0.0",
  "description": "The starter template for running Github Pages with docusaurus for document",
  "keywords": [
    "hyperse",
    "docusaurus",
    "docs",
    "gh pages",
    "github workflow",
    "Github Pages",
    "github pages CI CD"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/gh-pages-starter.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "lint": "eslint .",
    "lint-fix": "yarn lint --fix",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "lint-staged-files": "lint-staged --allow-empty",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "cz": "cz",
    "prepare": "husky"
  },
  "workspaces": [
    "website",
    "./"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.5",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@hyperse/eslint-config-hyperse": "^1.0.8",
    "@types/node": "^20.14.2",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.5.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "5.0.7",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.3.0"
}
